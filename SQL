DROP TABLE IF EXISTS BLOG;
DROP TABLE IF EXISTS COMMENT;

CREATE TABLE `BLOG`
(   `BLOG_CODE`    INT AUTO_INCREMENT NOT NULL COMMENT '블로그코드',
    `TITLE`    VARCHAR(255) NOT NULL COMMENT '제목',
    `CONTENT`    VARCHAR(255) NOT NULL COMMENT '내용',
    `BLOG_ID`    VARCHAR(100) NOT NULL COMMENT '블로그작성자',

    PRIMARY KEY ( `BLOG_CODE` )
)COMMENT = '블로그';


CREATE TABLE `COMMENT`
(   `COMMENT_CODE`    INT AUTO_INCREMENT NOT NULL COMMENT '댓글코드',
    `COMMENT`    VARCHAR(255) NOT NULL COMMENT '댓글',
    `COMMENT_DATE`    VARCHAR(255) DEFAULT NOW() NOT NULL COMMENT '댓글작성일',
    `COMMENT_ID`    VARCHAR(255) NOT NULL COMMENT '댓글작성자',
    `BLOG_CODE`    INT NOT NULL COMMENT '댓글쓸블로그',

    PRIMARY KEY ( `COMMENT_CODE` )
)COMMENT = '댓글';